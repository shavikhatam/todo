<h1>completed tasks</h1>

<% @lists.each do |list| %>
    <% if list.elements.where(done: true).any? %>

        <div class='list'>

          <div class='list-item'>
            <%= list.title %>
          </div>

          <div class="elements">

            <% list.elements.where(done: true).order('id desc').each do |element| %>
                <div class="list-element-done"><%= element.todo %></div>
            <% end %>

          </div>
        </div>
    <% end %>
<% end %>